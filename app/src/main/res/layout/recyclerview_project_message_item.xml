<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerview_selector">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">

        <com.example.administrator.xingyi.more.RoundImageView
            android:id="@+id/riv_project_message"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/moren_touxiang"/>
        <TextView
            android:id="@+id/tv_project_message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/riv_project_message"
            android:layout_alignTop="@+id/riv_project_message"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:alpha="0.8"
            android:text="用户1"/>
        <TextView
            android:id="@+id/tv_project_message_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/riv_project_message"
            android:layout_below="@+id/tv_project_message_name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:alpha="0.6"
            android:text="支持公益活动，加油！"/>
        <TextView
            android:id="@+id/tv_project_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/riv_project_message"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:alpha="0.6"
            android:text="2018-10-11"/>
        <View
            android:layout_below="@+id/tv_project_message_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/gray_light">
        </View>
    </RelativeLayout>
</LinearLayout>
