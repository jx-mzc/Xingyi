<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".project.ProjectActivity">
    <com.hjq.bar.TitleBar
        android:id="@+id/title_project_detail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        app:icon_left="@drawable/ic_back"
        app:icon_right="@drawable/ic_rank"
        app:size_title="20sp"
        app:color_title="@color/black"
        app:title="项目详情" />
    <ScrollView
        android:id="@+id/sv_project"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_project_detail"
        android:layout_above="@+id/rv_bottom_project"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/iv_project"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:src="@drawable/timg1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginEnd="@dimen/dp_15">
                <TextView
                    android:id="@+id/tv_project_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="公益项目名"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/gray_light">
                </View>
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="项目简介"/>
                <TextView
                    android:id="@+id/tv_project_introduction"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/tv_gray_deep"
                    android:textSize="16sp"
                    android:text="为了山区孩子的学习"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/gray_light">
                </View>
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="筹星用途"/>
                <TextView
                    android:id="@+id/tv_project_use"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColor="@color/tv_gray_deep"
                    android:textSize="16sp"
                    android:text="学习用品"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/gray_light">
                </View>
                <ImageView
                    android:id="@+id/iv_sponser"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/alashan"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/tv_sponser"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="阿拉善基金会"/>
               <TextView
                   android:id="@+id/tv_sponser_detail"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:layout_gravity="center_horizontal"
                   android:textColor="@color/tab_checked"
                   android:textSize="14sp"
                   android:text="资助方详情 >"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/gray_light">
                </View>
                <ImageView
                    android:id="@+id/iv_originator"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@drawable/siyecao"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/tv_originator"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="四叶草公益"/>
                <TextView
                    android:id="@+id/tv_originator_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/tab_checked"
                    android:textSize="14sp"
                    android:text="发起方&amp;执行方详情 >"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0.5"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@color/gray_light">
                </View>
                <TextView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="筹星进度"/>
                <com.example.administrator.xingyi.customView.ProgressView
                    android:id="@+id/pv_project"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_height="@dimen/dp_17"
                    app:nearOverText="即将完成"
                    app:overText="已筹集" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5">
                    <TextView
                        android:id="@+id/tv_project_participant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="100"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_below="@+id/tv_project_participant"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:text="参与人数"/>
                    <TextView
                        android:id="@+id/tv_target_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignLeft="@+id/tv_target"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="1000"/>
                    <TextView
                        android:id="@+id/tv_target"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_3"
                        android:layout_below="@+id/tv_target_stars"
                        android:layout_alignParentEnd="true"
                        android:textSize="15sp"
                        android:textColor="@color/gray"
                        android:text="目标星星数"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rv_bottom_project"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:ignoreGravity="@id/v_bottom_projec"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/v_bottom_projec"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentTop="true"
            android:background="@color/gray_light">
        </View>
        <ImageView
            android:id="@+id/iv_project_praise"

            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:src="@drawable/image_praise"/>
        <ImageView
            android:id="@+id/iv_project_message"
            android:layout_toEndOf="@+id/iv_project_praise"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_28"
            android:src="@drawable/ic_message"/>
        <ImageView
            android:id="@+id/iv_project_share"
            android:layout_toEndOf="@+id/iv_project_message"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_26"
            android:src="@drawable/ic_share"/>
        <Button
            android:id="@+id/bt_donate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/bbuton_rounded"
            android:paddingEnd="@dimen/dp_20"
            android:paddingStart="@dimen/dp_20"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="我要捐星"/>
    </RelativeLayout>
</RelativeLayout>