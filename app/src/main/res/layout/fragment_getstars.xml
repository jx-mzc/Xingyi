<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hjq.bar.TitleBar
        android:id="@+id/title_getstars"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"

        app:color_title="@color/black"
        app:icon_back="false"
        app:size_title="20sp"
        app:title="获取星星" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/rv_getstars_step"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_160"
            android:layout_centerInParent="true"
            android:background="@drawable/bbuton_rounded">

            <ImageView
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_steps"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_getstars_step"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rv_getstars_step"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="今日步数15步"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/gray">

    </View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <RelativeLayout
            android:id="@+id/rv_getstars_clocks"
            android:layout_centerInParent="true"
            android:layout_width="@dimen/dp_160"
            android:layout_height="@dimen/dp_160"
            android:background="@drawable/bbuton_rounded">
            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="@dimen/dp_100"
                android:layout_height="@dimen/dp_100"
                android:src="@drawable/ic_clocks"/>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
