<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_title_donate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_55"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:text="选择星星数"
        android:textColor="@color/tv_gray_deep"
        android:textSize="20sp"/>
    <View
        android:id="@+id/v_donate"
        android:layout_below="@+id/tv_title_donate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:background="@color/gray_light">

    </View>
    <LinearLayout
        android:id="@+id/ll_mystars_donate"
        android:layout_below="@+id/v_donate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的星星数："
            android:textSize="16sp"
            android:textColor="@color/gray"/>
        <TextView
            android:id="@+id/tv_project_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="16sp"
            android:textColor="@color/gray"/>
    </LinearLayout>
    <LinearLayout
        android:layout_above="@+id/rv_bottom_project_donate"
        android:layout_below="@+id/ll_mystars_donate"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="vertical"
        android:divider="@color/gray_light"
        android:dividerPadding="@dimen/dp_10"
        android:showDividers="end">

        <RadioGroup
            android:id="@+id/rg_donate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RadioButton
                android:id="@+id/rb_donate_100"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:button="@null"
                android:drawableStart="@drawable/radio"
                android:textColor="@drawable/radio_selector"
                android:textStyle="bold"
                android:textSize="16sp"
                android:drawablePadding="@dimen/dp_15"
                android:text="100颗星星"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/gray_light">
            </View>
            <RadioButton
                android:id="@+id/rb_donate_1000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:button="@null"
                android:drawableStart="@drawable/radio"
                android:textColor="@drawable/radio_selector"
                android:textStyle="bold"
                android:textSize="16sp"
                android:drawablePadding="@dimen/dp_15"
                android:text="1000颗星星"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/gray_light">
            </View>
            <RadioButton
                android:id="@+id/rb_donate_2000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:button="@null"
                android:drawableStart="@drawable/radio"
                android:textColor="@drawable/radio_selector"
                android:textStyle="bold"
                android:textSize="16sp"
                android:drawablePadding="@dimen/dp_15"
                android:text="2000颗星星"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/gray_light">
            </View>
            <RadioButton
                android:id="@+id/rb_donate_3000"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:button="@null"
                android:drawableStart="@drawable/radio"
                android:textColor="@drawable/radio_selector"
                android:textStyle="bold"
                android:textSize="16sp"
                android:drawablePadding="@dimen/dp_15"
                android:text="3000颗星星"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0.5"
                android:background="@color/gray_light">
            </View>
        </RadioGroup>
        <RelativeLayout
            android:id="@+id/rl_donate_custom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60">
            <ImageView
                android:id="@+id/iv_donate_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/gou_selector"/>
            <EditText
                android:id="@+id/de_donate_custom"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:textStyle="bold"
                android:digits="1234567890"
                android:textSize="16sp"
                android:textColor="@color/tab_checked"
                android:enabled="false"
                android:layout_toEndOf="@+id/iv_donate_custom"/>
            <TextView
                android:id="@+id/tv_donate_custom"
                android:layout_toEndOf="@+id/de_donate_custom"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@drawable/text_selector"
                android:text="颗星星"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/gray_light">
        </View>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rv_bottom_project_donate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:ignoreGravity="@id/v_bottom_projec"
        android:layout_alignParentBottom="true">
        <View
            android:id="@+id/v_bottom_projec"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_alignParentTop="true"
            android:background="@color/gray_light">
        </View>
        <ImageView
            android:id="@+id/iv_project_donate_exit"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/ic_exit"/>
        <Button
            android:id="@+id/bt_confirm_donate"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_34"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@drawable/bbuton_rounded"
            android:alpha="0.5"
            android:enabled="false"
            android:paddingEnd="@dimen/dp_20"
            android:paddingStart="@dimen/dp_20"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="确认捐星"/>
    </RelativeLayout>
</RelativeLayout>
