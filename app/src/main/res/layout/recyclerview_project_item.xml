<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerview_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_13">

    <ImageView
        android:id="@+id/iv_project_item"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/dp_180" />
    <TextView
        android:id="@+id/tv_projectview_title_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="公益项目名称"
        />
    <com.example.administrator.xingyi.customView.ProgressView
        android:id="@+id/pv_projectview_item"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_height="@dimen/dp_17"
        app:nearOverText="即将完成"
        app:overText="已筹集" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5">
        <TextView
            android:id="@+id/tv_projectview_participant_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="100"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_below="@+id/tv_projectview_participant_item"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:text="参与人数"/>
        <TextView
            android:id="@+id/tv_target_stars_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/tv_target_item"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="1000"/>
        <TextView
            android:id="@+id/tv_target_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_below="@+id/tv_target_stars_item"
            android:layout_alignParentEnd="true"
            android:textSize="15sp"
            android:textColor="@color/gray"
            android:text="目标星星数"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0.5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/tv_gray_deep">
    </View>
</LinearLayout>
