        <!--android:id="@+id/tv_delete"-->
        <!--android:layout_width="60dp"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:background="@color/red"-->
        <!--android:gravity="center"-->
        <!--android:text="删除"-->
        <!--android:visibility="gone" />-->

</RelativeLayout>