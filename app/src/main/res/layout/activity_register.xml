<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".register.RegisterActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        app:icon_left="@drawable/ic_back"
        app:title="用户注册"
        app:size_title="20sp"
        app:color_title="@color/black">
    </com.hjq.bar.TitleBar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginRight="@dimen/dp_65"
        android:layout_marginTop="@dimen/dp_25">

    <ImageView
        android:id="@+id/img_register_account"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:layout_marginLeft="@dimen/margin_tiny"
        android:scaleType="fitXY"
        android:src="@drawable/ic_ren"/>

    <EditText
        android:id="@+id/et_register_account"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_tiny"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_toEndOf="@+id/img_register_account"
        android:background="@drawable/edit_round"
        android:inputType="text"
        android:hint="请输入用户名"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textColorHint="@color/tv_gray_deep"
        android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_delete_register_username"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_delete_all"
            android:visibility="invisible" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginRight="@dimen/dp_65">

        <ImageView
            android:id="@+id/img_register_pw"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:scaleType="fitXY"
            android:src="@drawable/ic_pwd"/>

        <EditText
            android:id="@+id/et_register_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@+id/img_register_pw"
            android:background="@drawable/edit_round"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="@color/tv_gray_deep"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_delete_register_pwd"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_delete_all"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginRight="@dimen/dp_65">

        <ImageView
            android:id="@+id/img_register_repw"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:scaleType="fitXY"
            android:src="@drawable/ic_pwd"/>

        <EditText
            android:id="@+id/et_register_repassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@+id/img_register_repw"
            android:background="@drawable/edit_round"
            android:hint="请再次输入密码"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="@color/tv_gray_deep"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_delete_register_repwd"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_delete_all"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginRight="@dimen/dp_65">

        <ImageView
            android:id="@+id/img_register_tel"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:scaleType="fitXY"
            android:src="@drawable/ic_phone_number"/>

        <EditText
            android:id="@+id/et_register_tel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@+id/img_register_tel"
            android:background="@drawable/edit_round"
            android:hint="请输入手机号"
            android:inputType="number"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="@color/tv_gray_deep"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_delete_register_tel"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_delete_all"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_65"
        android:layout_marginRight="@dimen/dp_65">

        <ImageView
            android:id="@+id/img_register_address"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_tiny"
            android:scaleType="fitXY"
            android:src="@drawable/ic_address"/>

        <EditText
            android:id="@+id/et_register_address"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_tiny"
            android:layout_marginStart="@dimen/margin_normal"
            android:layout_toEndOf="@+id/img_register_address"
            android:background="@drawable/edit_round"
            android:hint="请输入联系地址"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textColorHint="@color/tv_gray_deep"
            android:textSize="16sp"/>
        <ImageView
            android:id="@+id/iv_delete_register_address"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@drawable/ic_delete_all"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:scaleType="fitXY"/>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_42"
        android:layout_marginLeft="@dimen/dp_100"
        android:layout_marginRight="@dimen/dp_85"
        android:layout_marginTop="@dimen/margin_medium"
        android:text="注册"
        android:background="@drawable/bbuton_rounded"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/tv_other"
            android:layout_marginEnd="@dimen/dp_5"
            android:background="@color/tab_checked"/>

        <TextView
            android:id="@+id/tv_other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="13sp"
            android:textColor="@color/tab_checked"
            android:text="其他方式注册"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/tv_other"
            android:layout_marginStart="@dimen/dp_5"
            android:background="@color/tab_checked"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large">

        <ImageView
            android:id="@+id/iv_register_qq"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/ic_qq"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/dp_60"/>
        <ImageView
            android:id="@+id/iv_register_wechat"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/ic_wechat"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/iv_register_weibo"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_weibo"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/dp_60"/>

    </RelativeLayout>
</LinearLayout>