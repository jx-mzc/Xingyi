<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".project.projectMessage.ProjectMessageActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_project_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_alignParentTop="true"
        app:icon_left="@drawable/ic_back"
        app:color_title="@color/black"
        app:size_title="20sp"
        app:title="10条留言"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_project_message"
        android:layout_below="@+id/title_project_message"
        android:layout_above="@+id/rl_project_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/rl_project_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <View
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/gray_light">
        </View>
        <EditText
            android:id="@+id/et_project_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_60"
            android:layout_marginStart="@dimen/dp_15"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:background="@null"
            android:textColorHint="@color/gray"
            android:hint="有什么想说的话"/>
        <TextView
            android:id="@+id/tv_send_project_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:textSize="16sp"
            android:enabled="false"
            android:text="发送"/>
    </RelativeLayout>
</RelativeLayout>