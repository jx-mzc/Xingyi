<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.hjq.bar.TitleBar
        android:id="@+id/title_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        app:icon_back="false"
        app:size_title="20sp"
        app:color_title="@color/black"
        app:title="更多" />
    <!--
        <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_more_touxiang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
        -->
    <RelativeLayout
        android:id="@+id/rl_person"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:background="@drawable/recyclerview_selector">

        <com.example.administrator.xingyi.more.RoundImageView
            android:id="@+id/person_round_img"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:src="@drawable/moren_touxiang"/>
        <TextView
            android:id="@+id/tv_more_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/person_round_img"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="未登录 请点击登录"/>
        <ImageView
            android:id="@+id/iv_person_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_15"
            android:src="@drawable/ic_right"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8">
    </android.support.v7.widget.RecyclerView>


</LinearLayout>
