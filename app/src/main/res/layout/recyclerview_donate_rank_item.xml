<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerview_selector">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15">
        <com.example.administrator.xingyi.more.RoundImageView
            android:id="@+id/riv_donate_touxiang"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:src="@drawable/touxiang"/>
        <TextView
            android:id="@+id/tv_donate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:alpha="0.75"
            android:textColor="@color/black"
            android:layout_toEndOf="@+id/riv_donate_touxiang"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Infnity丶"/>
        <TextView
            android:id="@+id/tv_donated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/riv_donate_touxiang"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="捐星"/>
        <TextView
            android:id="@+id/tv_donated_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_donated"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_40"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:text="100"/>
        <TextView
            android:id="@+id/tv_donate_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/tab_checked"
            android:text="1"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/gray_light">
        </View>
    </RelativeLayout>
</LinearLayout>
