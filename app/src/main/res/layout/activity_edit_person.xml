<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".more.person.EditPersonActivity">
    <com.hjq.bar.TitleBar
        android:id="@+id/title_edit_person"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        app:icon_left="@drawable/ic_back"
        app:title_right="完成"
        app:color_right="@color/tab_checked"
        app:size_right="17sp"
        app:size_title="20sp"
        app:color_title="@color/black"
        app:title="修改信息" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/tv_edit_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="手机号"/>
        <com.example.administrator.xingyi.customView.DelEditText
            android:id="@+id/et_edit_tel"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textColorHint="@color/tv_gray_deep"
            android:layout_marginBottom="@dimen/margin_normal"
            android:layout_marginEnd="@dimen/dp_5"
            android:hint="5201314"
            android:textSize="16sp"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@+id/et_edit_tel"
            android:layout_marginStart="@dimen/margin_normal"
            android:background="@color/tv_gray_deep"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <TextView
            android:id="@+id/tv_edit_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_15"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="联系地址"/>
        <com.example.administrator.xingyi.customView.DelEditText
            android:id="@+id/et_edit_address"
            android:layout_width="@dimen/dp_280"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/black"
            android:textColorHint="@color/tv_gray_deep"
            android:layout_marginEnd="@dimen/dp_5"
            android:hint="未知"
            android:layout_marginBottom="@dimen/margin_normal"
            android:textSize="16sp"
            android:background="@null"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:layout_below="@+id/et_edit_address"
            android:layout_marginStart="@dimen/margin_normal"
            android:background="@color/tv_gray_deep"/>
    </RelativeLayout>
</LinearLayout>