<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".project.projectDonateRank.ProjectDonateRankActivity">

    <com.hjq.bar.TitleBar
        android:id="@+id/title_donate_rank"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        app:icon_left="@drawable/ic_back"
        app:size_title="20sp"
        app:color_title="@color/black"
        app:title="捐赠排行">
    </com.hjq.bar.TitleBar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_my_donate_rank"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_75"
                android:background="@color/white">
                <com.example.administrator.xingyi.more.RoundImageView
                    android:id="@+id/riv_my_donate_touxiang"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_15"
                    android:src="@drawable/touxiang"/>
                <TextView
                    android:id="@+id/tv_my_name_donate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@+id/riv_my_donate_touxiang"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="Infnity丶"/>
                <TextView
                    android:id="@+id/tv_my_donated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/riv_my_donate_touxiang"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_40"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:text="已捐星星"/>
                <TextView
                    android:id="@+id/tv_my_donated_stars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv_my_donated"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_40"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:text="100"/>
                <TextView
                    android:id="@+id/tv_my_donate_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/tab_checked"
                    android:text="无排名"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_project_donate_rank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>